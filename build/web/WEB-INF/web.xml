<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Cấu hình Servlet cho LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorFeedbackServlet</servlet-name>
        <servlet-class>Controllers.DoctorControllers.DoctorFeedbackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controllers.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>Controllers.HomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientProfileServlet</servlet-name>
        <servlet-class>Controllers.Patient.PatientProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePatientProfileServlet</servlet-name>
        <servlet-class>Controllers.Patient.UpdatePatientProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>Controllers.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!-- Cấu hình Servlet cho DoctorIndividualServlet -->
    <servlet>
        <servlet-name>DoctorIndividualServlet</servlet-name>
        <servlet-class>Controllers.DoctorControllers.DoctorIndividualServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorIndividualServlet</servlet-name>
        <url-pattern>/DoctorIndividualServlet</url-pattern>
    </servlet-mapping>
    <!-- Cấu hình Servlet cho DoctorListServlet -->
    <servlet>
        <servlet-name>DoctorListServlet</servlet-name>
        <servlet-class>Controllers.DoctorControllers.DoctorListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorListServlet</servlet-name>
        <url-pattern>/doctorList</url-pattern>
    </servlet-mapping>
    <!-- Cấu hình trang mặc định (welcome file) -->
    <servlet-mapping>
        <servlet-name>DoctorFeedbackServlet</servlet-name>
        <url-pattern>/DoctorFeedbackServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/HomePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientProfileServlet</servlet-name>
        <url-pattern>/PatientProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePatientProfileServlet</servlet-name>
        <url-pattern>/UpdatePatientProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/ChangePasswordServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>HomePageServlet</welcome-file>
        <!-- Đảm bảo đường dẫn chính xác -->
    </welcome-file-list>
</web-app>
